# DentalAI Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://dentalai:dentalai_dev_password@postgres:5432/dentalai
POSTGRES_DB=dentalai
POSTGRES_USER=dentalai
POSTGRES_PASSWORD=dentalai_dev_password

# ============================================
# Redis
# ============================================
REDIS_URL=redis://:dentalai_redis_password@redis:6379/0
REDIS_PASSWORD=dentalai_redis_password

# ============================================
# Neo4j (Causal Memory)
# ============================================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=dentalai_neo4j_password

# ============================================
# Odoo ERP
# ============================================
ODOO_URL=http://odoo:8069
ODOO_DB=dentalai_odoo
ODOO_USERNAME=admin
ODOO_PASSWORD=admin
ODOO_API_KEY=your_odoo_api_key_here

# ============================================
# LLM API Keys
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ============================================
# Application Settings
# ============================================
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=true
LOG_LEVEL=DEBUG
SECRET_KEY=dev_secret_key_change_in_production
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# Frontend
# ============================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_APP_ENV=development

# ============================================
# External Services
# ============================================
WHATSAPP_TOKEN=your_whatsapp_token
TELEGRAM_TOKEN=your_telegram_token

# ============================================
# Monitoring
# ============================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_PORT=3000

# ============================================
# Email (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@dentalai.com

# ============================================
# AWS (Production only)
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET=dentalai-assets
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# ============================================
# Stripe (Billing)
# ============================================
STRIPE_API_KEY=sk_test_your-stripe-api-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# ============================================
# Sentry (Error Tracking)
# ============================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# ============================================
# Feature Flags
# ============================================
ENABLE_MFA=false
ENABLE_FINE_TUNING=false
ENABLE_EXECUTIVE_AGENTS=false
ENABLE_SELF_HEALING=false
